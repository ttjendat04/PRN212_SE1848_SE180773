<Window x:Class="HellloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HellloWpfApp"
        mc:Ignorable="d"
        Title="Đăng Nhập Hệ Thống" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="txtUser">
        <Grid.Background>
            <ImageBrush ImageSource="/6a34b9c1ba0166ad60f7e0199ece9cf4.jpg"/>
        </Grid.Background>
        <Label HorizontalAlignment="Left" Height="61" Margin="147,51,0,0" VerticalAlignment="Top" Width="502" FontWeight="Bold" FontSize="20" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.026"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFA92929" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label Content="Đăng nhập hệ thống quản lý" Foreground="#FF2DA90F" FontSize="24" Width="565" HorizontalContentAlignment="Center" Background="#FF3100FF"/>
        </Label>
        
        <Label Content="Username:" HorizontalAlignment="Left" Margin="157,125,0,0" VerticalAlignment="Top" Height="38" Width="92" FontSize="16" FontWeight="Bold"/>
                        
        <Label Content="Password:" HorizontalAlignment="Left" Height="42" Margin="157,0,0,0" VerticalAlignment="Center" Width="92" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Height="45" Margin="429,307,0,0" VerticalAlignment="Top" Width="121" Click="Button_Click"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Height="45" Margin="230,307,0,0" VerticalAlignment="Top" Width="106" Click="btnDangNhap_Click"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="38" Margin="288,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282" TextChanged="TextBox_TextChanged"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="288,0,0,0" VerticalAlignment="Center" Width="282" Height="39"/>

    </Grid>
</Window>
