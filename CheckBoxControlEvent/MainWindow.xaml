<Window x:Class="CheckBoxControlEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxControlEvent"
        mc:Ignorable="d"
        Title="Trần Tiến Đạt SE180773" Height="200" Width="300">
    <StackPanel>
        <Label>Bạn thích những gì?</Label>
        <CheckBox Name="chkToanBo"
                  Checked="ChkToanBo_Checked"
                  Unchecked="ChkToanBo_Checked">
            Thích toàn bộ những hoạt động
        </CheckBox>
        <StackPanel Margin="20,0">
            <CheckBox Name="chkCongNghe"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged">
                Thích nghiên cứu công nghệ
            </CheckBox>
            <CheckBox Name="chkDuLich"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged">
                Thích đi du lịch
            </CheckBox>
            <CheckBox Name="chkDaBong"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged">
                Thích đá bóng
            </CheckBox>
            <CheckBox Name="chkXemPhim"
                      Checked="chkSub_CheckedChanged"
                      Unchecked="chkSub_CheckedChanged">
                Thích xem phim
            </CheckBox>
                      
                      
        </StackPanel>
        
    </StackPanel>
</Window>
